<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="#FFFFFF" />

    <!-- Viền màu xám đậm -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- Màu viền -->

    <!-- Bo góc nhẹ -->
    <corners android:radius="50dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
